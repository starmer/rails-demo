<h3>Create a new list</h3>
<% form_for :list do |f|%>
  <%= render :partial => "shared/errors", :object => @list.errors %>
  <%= f.text_field :title, :class => "focus" %>
  <%= f.submit "Go" %>
<% end %>

<h3>My Lists</h3>
<ul id="my-lists">
<% for list in @lists %>
  <li>
    <%= link_to list.title, list_by_token_url(:token => list.link_token) %>
  </li>
<% end %>
</ul>