.clear{
	clear:both;
}

.footer{
	font-size:10px;
	color:#333333;
	text-align:center;
	margin-top:10px;
}

a.emphsizedLink, a.emphsizedLink:hover{
	background-color:#FF0000;
	color:#FFFFFF;
}

.titleContainer span{
	margin:0;
	padding:0 20px 0 20px;
	font-weight:bold;
	font-size:36px;
}

.title-container{
	background-image: url(/images/header.png);
	background-repeat:none;
	height:105px;
}

/*.title-container a{
	background-image: url(/images/logo.gif);
	display:block;
	width:603px;
	height:131px;
}*/

#navColumn{
	float:left;
}
#navColumn ul{
	list-style:none;
	padding:0 0 0 20px;
	margin:0;
}
#navColumn li{
	padding:7px 0 0 0;
	margin:0;
}
#navColumn li a{
	color:#000000;
	font-weight:normal;
	padding:5px;
}

#navColumn li a.currentPage{
	color:#FFFFFF;
	background-color:#FF0000;
}

#navColumn li a:hover{
	color:#FFFFFF;
}
#navColumn li h3{
	margin:0;
}
#navColumn li h3.selected{
	margin:0;
	color:#FFFFFF;
	background-color:#FF0000;
}
#navColumn ul li ul{
	margin:0;
}

#contentColumn{
	float:left;
	padding:7px 0 0 20px;
	width:700px;
}

.postContainer{
	border-bottom:1px solid #CCCCCC;
	padding-bottom:5px;
	margin-bottom:25px;
}

.postContainer  a.commentLink{
	color:#FFFFFF;
	background-color:#FF0000;
	padding:2px;
}

.postContainer .postTitle{
	margin:0;
}

.postContainer .postInfo{
	color:#999999;
	margin:0;
}

.createPostLinkContainer{
	text-align:right;
	padding:5px;
}

.createPostLink{
	padding:5px;
}

#commentsColumn{
	float:left;
	width:300px;
}

#createComment{
	float:left;
	margin-left:20px;
	margin-top:40px;
}

p.label{
	margin:0;
	font-weight:bold;
}

label{
	margin:0;
	font-weight:bold;
	display:block;
}

.commentContainer .commentInfo{
	font-size:small;
	color:#999999;
}

.commentContainer{
	border-bottom:1px solid #999999;
}